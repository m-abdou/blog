{% extends "AppBundle::layout.html.twig" %}

{% block content %}
    <div class="row-fluid">
        <!-- block -->
        <div class="block">
            <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Create Article</div>
            </div>
            <div class="block-content collapse in">
                <div class="span12">
                    <div class="span12">
                        {{ form_start(form, {'method': 'POST','action':path('app_post_create'),'attr':{'class':'form form-horizontal','novalidate': 'novalidate'} }  ) }}
                        <div class="control-group {% if form_errors(form.title) %}error{% endif %}">
                            <label class="control-label">{{ form_label(form.title) }}</label>
                            <div class="controls">
                                <span class="input-xlarge">{{ form_widget(form.title) }}</span>
                            </div>
                            {% if form_errors(form.title) %}
                                <span class="control-label">{{ form_errors(form.title)  }}</span>
                            {% endif %}
                        </div>
                        <div class="control-group {% if form_errors(form.content) %}error{% endif %}">
                            <label class="control-label">{{ form_label(form.content) }}</label>
                            <div class="controls">
                                <span class="input-xlarge">{{ form_widget(form.content) }}</span>
                            </div>
                            {% if form_errors(form.content) %}
                                <span class="control-label">{{ form_errors(form.content)  }}</span>
                            {% endif %}
                        </div>
                        <div class="control-group">
                            <label class="control-label">{{ form_label(form.category) }}</label>
                            <div class="controls">
                                <span class="input-xlarge">{{ form_widget(form.category) }}</span>
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">{{ form_label(form.visibility) }}</label>
                            <div class="controls">
                                <span class="input-xlarge">{{ form_widget(form.visibility) }}</span>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- /block -->
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/assets/DT_bootstrap.css') }}">

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/app/vendors/modernizr-2.6.2-respond-1.1.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/vendors/jquery-1.9.1.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/vendors/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/assets/scripts.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/assets/DT_bootstrap.js') }}"></script>
{% endblock %}

