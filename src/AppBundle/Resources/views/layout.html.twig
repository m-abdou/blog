{% extends "::base.html.twig" %}
  {% block stylesheets %}
      <link href="{{ asset("bundles/app/bootstrap/css/bootstrap.min.css")}}"  media="all" rel="stylesheet" type="text/css">
      <link href="{{ asset("bundles/app/bootstrap/css/bootstrap-responsive.min.css")}}" media="all" rel="stylesheet" type="text/css">
      <link href="{{ asset("bundles/app/assets/styles.css")}}" media="all" rel="stylesheet" type="text/css">
  {% endblock %}
  {% block header %}
      <div class="navbar navbar-fixed-top">
          <div class="navbar-inner">
              <div class="container-fluid">
                  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </a>
                  <a class="brand" href="">Welcome To Blog</a>
                  <div class="nav-collapse collapse">
                      {% if app.user %}
                          <ul class="nav pull-right">
                              <li class="dropdown">
                                  <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-user"></i> {{ app.user }} <i class="caret"></i>

                                  </a>
                                  <ul class="dropdown-menu">
                                      <li>
                                          <a tabindex="-1" href="{{ path('fos_user_profile_edit')}}">Profile</a>
                                      </li>
                                      <li class="divider"></li>
                                      <li>
                                          <a tabindex="-1" href="{{ path('fos_user_security_logout')}}">Logout</a>
                                      </li>
                                  </ul>
                              </li>
                          </ul>
                      {% endif %}
                      <ul class="nav">
                          <li>
                              <a href="{{ path('app_blog_home')}}">Home</a>
                          </li>
                          {% if app.user %}
                          <li>
                              <a href="{{ path('app_blog_panel')}}">Admin Panel</a>
                          </li>
                          {% endif %}
                      </ul>
                  </div>
              </div>
          </div>
      </div>
  {% endblock %}
  {% block body %}
      <div class="container-fluid">
          <div class="row-fluid">
              <div class="span3" id="sidebar">
                  {% block slidbar %}
                      <ul class="nav nav-list bs-docs-sidenav nav-collapse collapse">
                          <li>
                              <a href="{{ path('app_post_list') }}"><i class="icon-chevron-right"></i>List Articles</a>
                          </li>
                          {% if is_granted('ROLE_ADMIN') %}
                          <li>
                              <a href="{{ path('app_category_list') }}"><i class="icon-chevron-right"></i>List Category</a>
                          </li>
                          {% endif %}
                      </ul>
                  {% endblock %}
              </div>
              <div class="span9" id="content">
                  {% block content %}
                  {% endblock %}
              </div>
          </div>
      </div>
  {% endblock %}
  {% block javascripts %}
      <script src="{{ asset("bundles/app/vendors/jquery-1.9.1.js") }}" type="text/javascript"></script>
      <script src="{{ asset("bundles/app/bootstrap/js/bootstrap.min.js") }}" type="text/javascript"></script>
      <script src="{{ asset("bundles/app/vendors/jquery.uniform.min.js") }}" type="text/javascript"></script>
  {% endblock %}