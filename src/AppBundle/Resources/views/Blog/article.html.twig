
{% extends "AppBundle::layout.html.twig" %}
{#{% block stylesheets %}#}
    {#{{ parent() }}#}
    {#{% stylesheets#}
    {#'bundles/edfa3lyfrontend/css/angularCloak.css'#}
    {#'bundles/edfa3lyfrontend/css/Edfa3ly/plugins/loading-bar.css'#}
    {#filter='?uglifycss,cssrewrite' %}#}
    {#{% endstylesheets %}#}
{#{% endblock %}#}
{% block body %}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">Welcome To Blog</a>
                <div class="nav-collapse collapse">
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-user"></i> Vincent Gabriel <i class="caret"></i>

                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a tabindex="-1" href="#">Profile</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a tabindex="-1" href="login.html">Logout</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span9" id="content">
                <div class="row-fluid">
                    <!-- block -->
                        <div class="block">
                            <div class=" navbar-inner block-header">
                                <div class="muted pull-left ">
                                  <h3>{{ article.title }}</h3>
                                </div>
                                <br><br>
                                <div class="muted pull-left ">
                                   write {{ article.createAt|date("m/d/Y") }}
                                </div>

                                <div class="pull-right">
                                    <span class="badge badge-warning">{{ article.category.name }}</span>
                                </div>
                                <br>
                            </div>
                            <div class="block-content collapse in">
                                <div class="span12">
                                     <span class="alert-info">
                                            <div class="alert alert-block">
                                                <h5> {{ article.content }}</h5>
                                            </div>
                                        </span>
                                </div>
                            </div>
                        </div>
                    <!-- /block -->
                </div>
            </div>
            <div class="span9" id="content">
                <div class="row-fluid">
                    <!-- block -->
                        <div class="block">
                            <div class=" navbar-inner block-header">
                                <div class="muted pull-left ">
                                    Comments
                                </div>
                                <br>
                            </div>
                            <div class="block-content collapse in ng-cloak" ng-controller="CommentController" ng-init="init({{ article.id }})" >
                                <div  class="block-content" ng-repeat=" comment in comments ">
                                    <div class="span12">
                                        <span class="alert-info">
                                            <div class="alert alert-info">
                                                <h5> [[ comment.content ]] </h5>
                                            </div>
                                        </span>
                                    </div>
                                </div>
                                <div class="span12">
                                    <div  class="block-content collapse in">
                                        <div class="span3">
                                            <form name="form" novalidate="novalidate" ng-submit="addCommentClicked()" class="form-horizontal">
                                                <fieldset>
                                                    <div class="control-group">
                                                        <div class="controls">
                                                            <textarea name="comment" ng-model="commentValue" required="required"  class="input-xlarge focused"></textarea>
                                                        </div>
                                                        <div>
                                                            <button type="submit" class=" btn btn-success">Add Comment</button>
                                                        </div>

                                                    </div>
                                                </fieldset>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <!-- /block -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
        <script data-main="{{ asset('bundles/app/js/AngularApp/Comment/main.js') }}" src="{{ asset('bundles/app/js/AngularApp/bower_components/requirejs/require.js') }}"></script>
{% endblock %}
