{% extends "AppBundle::layout.html.twig" %}
{% block body %}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">Welcome To Blog</a>
                <div class="nav-collapse collapse">
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-user"></i> Vincent Gabriel <i class="caret"></i>

                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a tabindex="-1" href="#">Profile</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a tabindex="-1" href="login.html">Logout</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span9" id="content">
                <div class="row-fluid">
                    <!-- block -->
                    <div class="block">
                        <div class=" navbar-inner block-header">
                            <div class="muted    chart-bottom-heading ">
                                Categories
                            </div>
                        </div>
                        <div class="block-content collapse in">
                            {% for category in categories %}
                                <div class="span3">
                                    <div class="chart-bottom-heading">
                                        <a class="label label-info">{{ category.name }}</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <!-- /block -->
                </div>

                <div class="row-fluid">
                    <!-- block -->
                {% for post in posts %}
                    <div class="block">
                        <div class=" navbar-inner block-header">
                            <div class="muted pull-left ">
                                {{ post.title }}
                            </div>
                            <div class="pull-right">
                                <a href="{{ path('app_blog_showarticledetails',{'id': post.id }) }}" class="badge badge-warning">View Article</a>
                            </div>
                        </div>
                        <div class="block-content collapse in">
                            <div class="span12">
                                {{ post.content }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
                    <!-- /block -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
