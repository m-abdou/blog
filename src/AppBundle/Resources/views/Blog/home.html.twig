{% extends "AppBundle::layout.html.twig" %}
{% block body %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span9" id="content">
                <div class="row-fluid">
                    <!-- block -->
                    <div class="block">
                        <div class=" navbar-inner block-header">
                            <div class="muted    chart-bottom-heading ">
                                Categories
                            </div>
                        </div>
                        <div class="block-content collapse in">
                            {% for category in categories %}
                                <div class="span3">
                                    <div class="chart-bottom-heading">
                                        <a href="{{ path('app_blog_getarticlesbycategory',{ 'id': category.id }) }}" class="label label-info" >{{ category.name }}</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <!-- /block -->
                </div>

                <div class="row-fluid">
                    <!-- block -->
                {% for post in posts %}
                    <div class="block">
                        <div class=" navbar-inner block-header">
                            <div class="muted pull-left ">
                                <h3>{{ post.title }}</h3>
                            </div>
                            <div class="pull-right">
                                <a href="{{ path('app_blog_showarticledetails',{'id': post.id }) }}" class="badge badge-warning">View Article</a>
                            </div>
                        </div>
                        <div class="block-content collapse in">
                            <div class="span12">
                                {{ post.content }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
                    <!-- /block -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
